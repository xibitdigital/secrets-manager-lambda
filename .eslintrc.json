{
  "env": {
    "node": true,
    "commonjs": true,
    "es6": true,
    "mocha": true,
    "jest": true
  },
  "extends": ["eslint:recommended"],
  "parserOptions": {
    "ecmaVersion": 2018,
    "sourceType": "module"
  },
  "rules": {
    "no-console": [0],
    "indent": [2, 2],
    "linebreak-style": [2, "unix"],
    "semi": [2, "always"],
    "max-len": [2, 160]
  }
}
